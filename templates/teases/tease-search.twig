
<div class="col-md-8 m-auto">
  <article class="tease tease-{{post.post_type}} mb-3" id="tease-{{post.ID}}">
    {% block content %}
      <h3><a href="{{post.link}}">{{post.title}}</a></h3>
      <p>{{post.preview}}</p>
      {% if post.get_thumbnail %}
        <img class="mb-3" src="{{post.thumbnail.src}}" />
      {% endif %}
    {% endblock %}
  </article>
</div>
