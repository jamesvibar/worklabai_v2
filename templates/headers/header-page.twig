<header id="hero-page" class="hero-container hero-container--page" style="background-image: url('{{ Image(background_image).src }}')">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-lg-12 mt-auto">
        <div class="hero-page__content">
          <h2 class="hero-page__title mt-auto">
            {% if post.title %}
            {{ post.title }}
            {% else %}
            {{ post }}
            {% endif %}
          </h2>
        </div>
      </div>
    </div>
  </div>
</header>